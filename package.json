{
  "name": "cert-manager",
  "version": "1.0.0",
  "description": "A comprehensive certificate management tool for creating, viewing, and renewing SSL certificates",
  "main": "src/app.js",  "scripts": {
    "start": "node src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:api": "jest --testPathPattern=tests/api",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:teardown": "docker-compose -f docker-compose.test.yml down",
    "dev": "nodemon src/app.js",
    "swagger-gen": "node src/api/swagger-gen.js"
  },
  "dependencies": {
    "dockerode": "^4.0.0",
    "express": "^4.18.2",
    "ejs":"^3.1.10",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "node-cron": "^3.0.3",
    "chokidar": "^3.5.3",
    "swagger-ui-express": "^5.0.0",
    "express-openapi-validator": "^5.0.1",
    "js-yaml": "^4.1.0",
    "cors": "^2.8.5",
    "ssh2-sftp-client": "^9.1.0",
    "smb2": "^0.2.11",
    "basic-ftp": "^5.0.3",
    "axios": "^1.6.2",
    "form-data": "^4.0.0",
    "nodemailer": "^6.9.7",
    "mustache": "^4.2.0",
    "os": "^0.1.2",
    "archiver": "^5.3.1",
    "extract-zip": "^2.0.1",
    "winston": "^3.3.3",
    "node-fetch": "^2.6.7",
    "got": "^11.8.5",
    "undici": "^5.18.0",
    "node-forge": "^1.3.0"
  },  "devDependencies": {
    "nodemon": "^2.0.7",
    "swagger-jsdoc": "^6.2.8",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "cross-env": "^7.0.3",
    "wait-for-expect": "^3.0.2",
    "dockerode": "^4.0.0"  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/**/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "globalSetup": "<rootDir>/tests/globalSetup.js",
    "globalTeardown": "<rootDir>/tests/globalTeardown.js"
  },
  "author": "Christian Meiners",
  "license": "MIT"
}
